<section>
    <div class="container-fluid mt-4">
            <h2 class="text-center text-dark">USER'S ORDER</h2><hr>
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Order Id</th>
                        <th scope="col">User Id</th>
                        <th scope="col">Payment</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Status</th>
                        <th scope="col">Date</th>
                        <th scope="col">Orders</th>
                    </tr>
                </thead>
                <tbody>
                    
                    {{#each orders}}
                    <tr>
                        <th scope="row">1</th>
                        <td><b>{{this._id}}</b></td>
                        <td><b><span class="text-danger">{{this.userId}}</span></b></td>
                        <td><b>{{this.paymentMethod}}</b></td>
                        <td><b>Rs. <span class="text-danger">{{this.totalAmount}}</span>/-</b></td>
                        <td><b><span class="text-success">{{this.status}}</span></b></td>
                        <td><b>{{this.date}}</b></td>
                        <td>
                            <a href="/admin/view-order-products/{{this._id}}" class="btn btn-primary">View Orders</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>