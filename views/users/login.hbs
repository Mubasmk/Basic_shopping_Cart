<section class="wrapper fadeInDown mt-4">
    <div id="formContent">
    <div class="fadeIn first">
        <h2 class="text-center mb-4"><b><span class="text-success">REAL</span><span class="text-danger">CART</span></b></h2>
    </div>
    
       <form action="/login" method="POST">
       <h3 id="loginhead">Login</h3>
       {{#if logErr}}
       <p class="text-danger error"><b>{{logErr}}</b></p>
       {{/if}}
       <input type="email" name="Email" class="fadeIn second" id="login" placeholder="email">
       <input type="password" name="Password" class="fadeIn third" id="password" placeholder="password">
       <input type="submit" class="fadeIn fourth" value="log in">

       </form>
       <p style="color: gray;">Or</p>
       <div id="formFooter">
           <a class="underlineHover" style="color: #f52b07;" href="/signup">Don't have an account ?</a>
       </div>
       </div>
</section>

