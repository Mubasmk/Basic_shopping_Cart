        box-shadow: 0 30px 60px 0 rgba(0, 0, 0, 0.3);
        text-align: center;
    }
   #loginhead{
       font-size: 2em;
       margin: 10px 0;
   }
   #password,#login{
       background-color: #f6f6f6;
       color: #0d0d0d;
       padding: 15px 32px;
       text-align: center;
       text-decoration: none;
       display: inline-block;
       font-size: 16px;
       margin: 13px;
       width: 85%;
       border: 2px solid #f6f6f6;
       border-radius: 5px;
