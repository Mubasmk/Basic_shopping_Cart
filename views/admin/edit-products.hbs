                    </select>
                </div>
                <div>
                    <input type="number" class="details" name="Tech-Battery-Rating" value="{{products.Tech-Battery-Rating}}" placeholder="Battery Power Rating" style="width: 350px;">
                    <input type="text" class="details" name="Tech-Weight" value="{{products.Tech-Weight}}" placeholder="Item Weight" style="width: 350px;" >
                </div>
                    
                        
            </div>







            <div class="form-group">
                <div class="text-center" style="margin-right: 70px;">
                    <label for="">Additional Benefit</label>
                </div>
                <div>
                    <select class="details" name="Item-Benefit" style="width: 704px;">
                        <option >Select Benefit</option>
                        <option selected hidden>{{products.Item-Benefit}}</option>
                        <option>Save Extra with No Cost EMI</option>
                        <option>10% off with AU Bank Debit Cards</option>
                    </select>
                </div>
            </div>


            <div class="form-group">
                <div class="text-center" style="margin-right: 70px;">
                    <label for="">Image</label>
                </div>
                <div>
                    <img src="/images/{{products._id}}.jpg" class="view-image" id="viewImg" alt="">
                <input type="file" name="Image"  class="form-group" onchange="imageView(event)" placeholder="Upload product image..." style="width: 704px;">
                </div>
            </div>
            <button type="submit" class="btn">Submit</button>
            
        </form>
    </div>
    </div>
</section>

<script>
    function imageView(event){
        document.getElementById('viewImg').src=URL.createObjectURL(event.target.files[0])
    }
</script>


