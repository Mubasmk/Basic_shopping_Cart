                            <option>Onyx Black</option>
                            <option>Gray Onyx</option>
                            <option>Pearl White</option>
                            <option>Titanium Sapphire</option>
                            <option>Black</option>
                            <option>Obsidian Black</option>
                            <option>Cyan</option>
                            <option>Mirage Blue</option>
                            <option>Blue</option>
                            <option>Ocean Blue</option>
                            <option>Mystery Black</option>
                        </select>
                    </div>
                <div>
                    <input name="Tech-Features" value="{{products.Tech-Features}}" class="details" style="width: 704px;"  placeholder="Special Features"></input>
                </div>

                <div>
                    <select class="details" name="Tech-Display" style="width: 350px;">
                        <option >Select Display</option>
                        <option selected hidden>{{products.Tech-Display}}</option>
                        <option >LCD</option>
                        <option >Super Amoled Plus</option>
                        <option >LED</option>
                        <option >FHD + DotDisplay</option>
                        <option >86% screen-to-body ratio</option>
                        <option >522 ppi pixel density</option>
                        <option >408 ppi pixel density</option>
                        <option >402 ppi pixel density</option>
                        <option >FHD + iView display</option>
                        <option >Halo FullView Display + FHD</option>
                        <option >Super Amoled</option>
                        <option >Infinity V-cut display</option>
                    </select>
